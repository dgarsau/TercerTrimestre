<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="387.0" prefWidth="381.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demofx.Pantalla2Controller">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <TableView fx:id="tablaBocadillos" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="nombreTableColumn" prefWidth="75.0" text="Nombre" />
       <TableColumn fx:id="precioTableColumn" prefWidth="75.0" text="Precio" />
     </columns>
   </TableView>

    <TextField fx:id="nombreTextField" prefHeight="0.0" prefWidth="341.0" promptText="Introduce un nombre..." />
    <TextField fx:id="precioTextField" promptText="Introduce el precio..." />

    <Button mnemonicParsing="false" onAction="#guardarBocadillos" text="Guardar" />

  <Button fx:id="pantallaHello" onAction="#irAPantallaHello" text="Ir a pantalla Hello" />

</VBox>
